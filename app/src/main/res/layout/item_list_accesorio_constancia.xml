<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_constancia_fumi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrisClaro"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_list_accesorio_descripcion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:textColor="@color/colorNegro"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/sp_list_accesorio_condicion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="5"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_list_accesorio_cantidad"
            style="@style/TIL"
            android:layout_weight="5">

            <EditText
                android:id="@+id/et_list_accesorio_cantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/cantidad"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>