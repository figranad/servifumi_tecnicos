<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.ConstanciaFumiActivity"
    tools:showIn="@layout/app_bar_constancia_fumi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/tl_constancia_fumi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_constancia_fumi_sin_enviar"
                    style="@style/TextoCabeceras"
                    android:background="@color/colorFondoNoEnviado"
                    android:text="@string/sin_enviar"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextoNoEnviado" />

                <TextView
                    android:id="@+id/tv_constancia_fumi_enviado"
                    style="@style/TextoCabeceras"
                    android:background="@color/colorFondoEnviado"
                    android:text="@string/enviados"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextoEnviado" />
            </TableRow>
        </TableLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_constancia_fumi"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>